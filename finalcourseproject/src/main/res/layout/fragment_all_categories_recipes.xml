<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:paddingTop="@dimen/default_padding"
    android:paddingHorizontal="@dimen/small_padding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/viewTextViewSearchCategoriesRecipesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_categories_title_text"
        android:textSize="@dimen/default_title_text_size"
        android:textColor="@color/colorDarkGray"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/middle_margin" />

    <SearchView
        android:id="@+id/viewSearchCategoryRecipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:searchIcon="@drawable/ic_baseline_search_24"
        android:iconifiedByDefault="false"
        android:focusable="false"
        android:queryHint="@string/search_query_hint_categories"
        android:padding="@dimen/small_padding"
        android:layout_marginBottom="@dimen/default_margin" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/viewAllCategoriesRecipesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>